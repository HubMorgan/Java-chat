<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:id="vbox" stylesheets="/style.css" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.Chat.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <TextArea fx:id="area" VBox.vgrow="ALWAYS" editable="false">
    </TextArea>
    <HBox>
        <TextField fx:id="field" HBox.hgrow="ALWAYS" onAction="#onHelloButtonClick">
            <HBox.margin>
                <Insets right="10" />
            </HBox.margin>
        </TextField>
        <Button fx:id="button" text="Send" onAction="#onHelloButtonClick"/>
    </HBox>
</VBox>
